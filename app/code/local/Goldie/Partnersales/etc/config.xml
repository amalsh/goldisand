<?xml version="1.0"?>
<config>
    <modules>
        <Goldie_Partnersales>
            <version>1.0.1</version>
        </Goldie_Partnersales>
    </modules>
    <global>
        <models>
            <goldie_partnersales>
                <class>Goldie_Partnersales_Model</class>
                <resourceModel>goldie_partnersales_resource</resourceModel>
            </goldie_partnersales>
            <goldie_partnersales_resource>
                <class>Goldie_Partnersales_Model_Resource</class>
                <entities>
                    <partners>
                        <table>partners</table>
                    </partners>
                </entities>
            </goldie_partnersales_resource>
        </models>
        <blocks>
            <goldie_partnersales>
                <class>Goldie_Partnersales_Block</class>
            </goldie_partnersales>
        </blocks>
        <events>
            <!--set cookie for partner-->
            <controller_action_layout_render_before>
                <observers>
                    <goldie_partnersales>
                        <type>singleton</type>
                        <class>goldie_partnersales/observer</class>
                        <method>setPartnerCookie</method>
                    </goldie_partnersales>
                </observers>
            </controller_action_layout_render_before>
            <!--create multiple invoices and multiple shipments-->
            <checkout_onepage_controller_success_action>
                <observers>
                    <invoiceshipment_observer>
                        <type>singleton</type>
                        <class>goldie_partnersales/observer</class>
                        <method>partnerInvoiceCreator</method>
                    </invoiceshipment_observer>
                </observers>
            </checkout_onepage_controller_success_action>

        </events>
        <helpers>
            <goldie_partnersales>
                <class>Goldie_Partnersales_Helper</class>
            </goldie_partnersales>
        </helpers>
        <resources>
            <goldie_partnersales_setup>
                <setup>
                    <module>Goldie_Partnersales</module>
                </setup>
            </goldie_partnersales_setup>
        </resources>
    </global>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <customgrid_column_append>
                        <type>model</type>
                        <class>Goldie_Partnersales_Model_Observer</class>
                        <method>appendCustomColumn</method>
                    </customgrid_column_append>
                </observers>
            </core_block_abstract_prepare_layout_before>
        </events>
    </adminhtml>
</config>